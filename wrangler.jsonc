{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "mogpersonalweb",
  "compatibility_date": "2025-10-11",
  "compatibility_flags": ["nodejs_compat"],
  "main": "./src/server.ts",
  "observability": {
    "enabled": true,
  },
  "routes": [
    {
      "pattern": "moghenry.com",
      "custom_domain": true,
    },
  ],
  "d1_databases": [
    {
      "binding": "DB",
      "database_id": "bc3baf4e-5815-48eb-8229-376dd729dba9",
      "migrations_dir": "migrations",
      "remote": true,
    },
  ],
  "r2_buckets": [
    {
      "bucket_name": "site-prod-assets",
      "binding": "R2",
      "remote": true,
    },
  ],
  "kv_namespaces": [
    {
      "binding": "KV",
      "id": "5c4fae69a46041738f4eeadfeda1ffcd",
      "remote": true,
    },
  ],
  "workflows": [
    {
      "name": "post-process-workflow",
      "binding": "POST_PROCESS_WORKFLOW",
      "class_name": "PostProcessWorkflow",
    },
    {
      "name": "comment-moderation-workflow",
      "binding": "COMMENT_MODERATION_WORKFLOW",
      "class_name": "CommentModerationWorkflow",
    },
    {
      "name": "scheduled-publish-workflow",
      "binding": "SCHEDULED_PUBLISH_WORKFLOW",
      "class_name": "ScheduledPublishWorkflow",
    },
  ],
  "durable_objects": {
    "bindings": [
      {
        "name": "RATE_LIMITER",
        "class_name": "RateLimiter",
      },
    ],
  },
  "vars": {
    "ADMIN_EMAIL": "moghenry0@gmail.com",
    "BETTER_AUTH_URL": "https://moghenry.com",
    "DOMAIN": "moghenry.com",
  },
  "ai": {
    "binding": "AI",
    "remote": true,
  },
  "queues": {
    "producers": [{ "binding": "QUEUE", "queue": "site-prod-tasks" }],
    "consumers": [
      {
        "queue": "site-prod-tasks",
        "max_batch_size": 10,
        "max_batch_timeout": 5,
        "max_retries": 3,
      },
    ],
  },
  "migrations": [
    {
      "tag": "rate-limiter-v1",
      "new_sqlite_classes": ["RateLimiter"],
    },
  ],
  "env": {
    "test": {
      "durable_objects": {
        "bindings": [
          {
            "name": "RATE_LIMITER",
            "class_name": "RateLimiter",
          },
        ],
      },
      "kv_namespaces": [
        {
          "binding": "KV",
        },
      ],
      "r2_buckets": [
        {
          "binding": "R2",
        },
      ],
      "d1_databases": [
        {
          "binding": "DB",
        },
      ],
      "workflows": [
        {
          "name": "post-process-workflow",
          "binding": "POST_PROCESS_WORKFLOW",
          "class_name": "PostProcessWorkflow",
        },
        {
          "name": "comment-moderation-workflow",
          "binding": "COMMENT_MODERATION_WORKFLOW",
          "class_name": "CommentModerationWorkflow",
        },
        {
          "name": "scheduled-publish-workflow",
          "binding": "SCHEDULED_PUBLISH_WORKFLOW",
          "class_name": "ScheduledPublishWorkflow",
        },
      ],
      "queues": {
        "producers": [{ "binding": "QUEUE", "queue": "blog-queue" }],
      },
    },
  },
}
